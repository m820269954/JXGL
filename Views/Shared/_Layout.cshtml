<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 教学管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    @if (Request.IsAuthenticated)
    {
    <p style="margin-left:1599px">Hello! @Session["UserName"]||@Html.ActionLink("注销", "Logout", "Authorize")</p>
    }
    @if (Session["UserGroup"].ToString() == "Student")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("教学管理系统", "StudentIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("我的信息", "StudentIndex", "Home")</li>
                        <li>@Html.ActionLink("选课", "Chooselesson", "CS")</li>
                        <li>@Html.ActionLink("课程信息查询", "ClassList", "CS")</li>
                        <li>@Html.ActionLink("修改密码", "ChangePwd", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else if (Session["UserGroup"].ToString() == "Admin")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("教学管理系统", "AdminIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("我的信息", "Index", "Home")</li>
                        <li>@Html.ActionLink("管理学生信息", "Index", "Students")</li>
                        <li>@Html.ActionLink("管理教师信息", "Index", "Teachers")</li>
                        <li>@Html.ActionLink("管理课程信息", "Index", "Courses")</li>
                        <li>@Html.ActionLink("管理教师授课信息", "Index", "TCs")</li>
                        <li>@Html.ActionLink("修改密码", "ChangePwd", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else if (Session["UserGroup"].ToString() == "Teacher")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("教学管理系统", "TeacherIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("我的信息", "Index", "Home")</li>
                        <li>@Html.ActionLink("我的学生信息", "Sinfo", "Students")</li>
                        <li>@Html.ActionLink("我的授课信息", "Sinfo", "Students")</li>
                        <li>@Html.ActionLink("录入成绩", "About", "Home")</li>
                        <li>@Html.ActionLink("修改成绩", "Contact", "Home")</li>
                        <li>@Html.ActionLink("修改密码", "ChangePwd", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Hbu——教务系统</h1>
        <h2 style="margin:auto " >请登陆</h2>
    }<div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 冯云龙</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
